<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.richard.voca.feature.settings">

    <application>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

            <intent-filter
                android:autoVerify="true"
                android:order="1">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <!-- Accepts URIs that begin with "https://voca.richard.pe/settings/” -->
                <data
                    android:host="voca.richard.pe"
                    android:pathPattern="/settings/.*"
                    android:scheme="https" />

                <!-- Accepts URIs that begin with "voca://voca.richard.pe/settings/” -->
                <data
                    android:host="voca.richard.pe"
                    android:pathPattern="/settings/.*"
                    android:scheme="voca" />

            </intent-filter>
        </activity>
    </application>

</manifest>